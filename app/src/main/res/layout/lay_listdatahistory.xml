<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	style="@style/ThemeTransparent"
	android:background="@android:color/transparent">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/cvProses"
		app:cardCornerRadius="10dp"
		android:innerRadius="10dp"
		android:thicknessRatio="2"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:background="@android:color/transparent">
	</android.support.v7.widget.CardView>

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="10dp"
		android:id="@+id/headatasproses"
		android:background="@drawable/up_two_rounded_gray"
		android:visibility="visible"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:layout_below="@id/headatasproses"
		android:background="@color/duckEggBlue"
		android:padding="5dp"
		android:id="@+id/rlDetailHistory">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_centerVertical="true"
			android:gravity="center_vertical|start"
			android:layout_gravity="center_vertical"
			android:layout_toLeftOf="@+id/ivDetailHistory"
			android:layout_toStartOf="@+id/ivDetailHistory">

			<TextView
				android:id="@+id/tvDetailHistory1"
				style="@style/HeaderListProgress"
				android:layout_marginRight="5dp"
				android:background="@android:color/transparent"
				android:layout_marginBottom="2dp"/>

			<TextView
				android:id="@+id/tvDetailHistory3"
				style="@style/HeaderListProgress"
				android:layout_marginRight="5dp"
				android:background="@android:color/transparent"
				android:layout_marginTop="2dp"/>
		</LinearLayout>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@android:drawable/ic_menu_view"
			android:id="@+id/ivDetailHistory"
			android:layout_weight="0.11"
			android:scaleType="fitCenter"
			android:layout_alignParentTop="false"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:layout_alignParentBottom="false"
			android:layout_centerVertical="true"
			android:layout_marginRight="5dp"/>
	</RelativeLayout>

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="10dp"
		android:id="@+id/headbawahproses"
		android:background="@drawable/down_two_rounded_gray"
		android:layout_below="@id/rlDetailHistory"
		android:visibility="visible"
		android:layout_marginBottom="5dp"/>

</RelativeLayout>