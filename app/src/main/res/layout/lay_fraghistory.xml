<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
						 xmlns:tools="http://schemas.android.com/tools"
						 android:layout_width="match_parent"
						 android:layout_height="match_parent"
						 tools:context="com.artolanggeng.purnamakertasindo.warehouse.fragHistory">

	<LinearLayout
		android:id="@+id/llFragHistory"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@color/ViewPagerBackground"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/ivRefreshHistory"
			android:layout_width="28dp"
			android:layout_height="32dp"
			android:background="@drawable/ic_refresh_black"
			android:layout_margin="5dp"
			android:layout_gravity="center_vertical"/>

		<LinearLayout
			android:id="@+id/llCariHistory"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_margin="5dp"
			android:background="@drawable/rectstrokegray"
			android:layout_gravity="center_vertical">

			<ImageView
				android:id="@+id/ivCariHistory"
				android:layout_width="28dp"
				android:layout_height="32dp"
				android:background="@drawable/ic_search"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="3dp"/>

			<EditText
				android:id="@+id/etCariHistory"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="center_vertical"
				android:layout_marginBottom="4dp"
				android:layout_marginTop="4dp"
				android:background="@android:color/transparent"
				android:layout_marginLeft="3dp"/>
		</LinearLayout>
	</LinearLayout>

	<android.support.v7.widget.RecyclerView
		android:layout_below="@+id/llFragHistory"
		android:id="@+id/rvFragHistory"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_margin="10dp"/>
</RelativeLayout>
