<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
								xmlns:app="http://schemas.android.com/apk/res-auto"
								android:layout_width="match_parent"
								android:layout_height="match_parent">

	<RelativeLayout
			android:id="@+id/rlDetailArmada"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/rectroundtrans"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true">

		<LinearLayout
				android:id="@+id/llDetailArmada"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="5dp"
				android:orientation="horizontal"
				android:paddingTop="3dp"
				android:paddingBottom="3dp">

			<ImageView
					android:id="@+id/ivPhotoArmada"
					android:layout_width="61dp"
					android:layout_gravity="center"
					android:scaleType="fitXY"
					app:srcCompat="@drawable/truck"
					android:adjustViewBounds="true"
					android:cropToPadding="false"
					android:layout_marginLeft="5dp"
					android:paddingLeft="5dp"
					android:layout_height="60dp"
					android:paddingRight="7dp"/>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical">

				<TextView
						android:id="@+id/tvJenisKendaraan"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="left|center_vertical"
						android:textSize="12sp"
						android:text="Jenis Kendaraan"
						android:layout_marginBottom="3dp"/>

				<TextView
						android:id="@+id/tvTipeKendaraan"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="left|center_vertical"
						android:textSize="12sp"
						android:text="Tipe Kendaraan"
						android:layout_marginBottom="3dp"/>

				<TextView
						android:id="@+id/tvNoPolisi"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="left|center_vertical"
						android:textSize="12sp"
						android:text="Nomor Kendaraan"
						android:layout_marginBottom="3dp"/>

			</LinearLayout>

			<ImageView
					android:id="@+id/ivInfoArmada"
					android:layout_width="20dp"
					android:layout_height="40dp"
					android:layout_gravity="center"
					android:paddingLeft="7dp"
					android:paddingTop="7dp"
					android:paddingBottom="7dp"
					app:srcCompat="@drawable/information"
					android:layout_marginRight="3dp"/>

		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>
