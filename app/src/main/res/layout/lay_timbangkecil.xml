<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.artolanggeng.purnamakertasindo.warehouse.MainProses">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:id="@+id/rlHeadProses"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true">
		<include layout="@layout/lay_headerutama"/>
	</RelativeLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:layout_below="@id/rlHeadProses"
		android:gravity="center_horizontal"
		android:background="@android:color/white"
		android:id="@+id/llTimbangKecil"
		android:weightSum="6">

		<RelativeLayout
			android:layout_weight="3"
			android:layout_width="0dp"
			android:layout_height="match_parent">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/llPelKecil"
				android:gravity="center_horizontal"
				android:layout_above="@+id/btnbawah1">

				<ImageView
					android:id="@+id/ivPelKecil"
					android:layout_width="32dp"
					android:layout_height="28dp"
					android:background="@drawable/ic_walk_24dp"
					android:layout_gravity="center_vertical"/>

				<TextView
					android:id="@+id/tvPelKecil"
					style="@style/DefaultTabText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/TitleArrived"
					android:layout_marginLeft="8dp"/>
			</LinearLayout>

			<Button
				android:layout_width="match_parent"
				android:layout_height="2dp"
				android:layout_alignParentTop="false"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_alignParentBottom="true"
				android:id="@+id/btnKecil1"
				android:background="@color/appleGreen"/>
		</RelativeLayout>

		<RelativeLayout
			android:layout_weight="3"
			android:layout_width="0dp"
			android:layout_height="match_parent">

			<LinearLayout
				android:id="@+id/llRiKecil"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_horizontal"
				android:layout_above="@+id/btnbawah3">

				<ImageView
					android:id="@+id/ivRiKecil"
					android:layout_width="28dp"
					android:layout_height="32dp"
					android:background="@drawable/riwayat"
					android:layout_gravity="center_vertical"/>

				<TextView
					style="@style/DefaultTabText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/TitleHistory"
					android:layout_marginLeft="8dp"
					android:id="@+id/tvRiKecil"/>
			</LinearLayout>

			<Button
				android:layout_width="match_parent"
				android:layout_height="2dp"
				android:layout_alignParentTop="false"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_alignParentBottom="true"
				android:id="@+id/btnKecil2"
				android:background="@color/whiteThree"/>
		</RelativeLayout>
	</LinearLayout>

	<android.support.v4.view.ViewPager
		android:id="@+id/vpProsesKecil"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/llTimbangKecil"
		android:background="@color/ViewPagerBackground" />
</RelativeLayout>