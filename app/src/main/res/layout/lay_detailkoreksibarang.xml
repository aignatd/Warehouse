<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
							xmlns:app="http://schemas.android.com/apk/res-auto"
							android:orientation="vertical"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							style="@style/ThemeTransparent"
							android:background="@android:color/transparent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@drawable/rectroundgrayblack4">

		<ImageView
			android:id="@+id/ivNoTimbang"
			android:layout_width="96dp"
			android:layout_height="wrap_content"
			android:scaleType="fitCenter"
			android:background="@drawable/timbang1"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="5dp"/>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:layout_centerVertical="true"
			android:layout_gravity="center_vertical"
			android:id="@+id/llDataTimbangBesar">

			<LinearLayout
				android:id="@+id/llBeratBruto"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true">

				<TextView
					android:hint="@string/HintBeratBruto"
					android:id="@+id/tvBeratBruto"
					style="@style/DetailTimbangan"
					android:background="@color/tw__transparent"
					android:paddingTop="3dp"
					android:paddingBottom="3dp"
					android:textColor="@android:color/holo_orange_dark"
					android:layout_gravity="center_vertical"
					android:text="Berat Bruto 0 Kg"/>
			</LinearLayout>

			<TextView
				android:id="@+id/tvTglTimbang"
				android:text=""
				style="@style/DetailTimbangan"
				android:paddingTop="3dp"
				android:paddingBottom="3dp"
				android:background="@color/tw__transparent"/>

			<TextView
				android:id="@+id/tvKodeBarang"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="2dp"
				android:paddingTop="3dp"
				android:paddingBottom="3dp"
				android:visibility="visible"/>

			<LinearLayout
				android:id="@+id/llNilaiPotongan"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true">

				<TextView
					android:id="@+id/tvNilaiPotongan"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="2dp"
					android:paddingTop="3dp"
					android:paddingBottom="3dp"
					android:visibility="visible"
					android:text="@string/HintPotongan"/>

				<TextView
					android:id="@+id/tvJenisPotong"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="2dp"
					android:layout_marginRight="2dp"
					android:paddingTop="3dp"
					android:paddingBottom="3dp"
					android:visibility="visible"
					android:text="@string/HintPotongan"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/llBeratNetto"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true">

				<TextView
					android:hint="@string/HintBeratNetto"
					android:textColorHint="@android:color/holo_blue_dark"
					android:id="@+id/tvBeratNetto"
					style="@style/DetailTimbangan"
					android:background="@color/tw__transparent"
					android:textColor="@android:color/holo_blue_dark"
					android:paddingTop="3dp"
					android:paddingBottom="3dp"
					android:layout_gravity="center_vertical"
					android:text="Berat Netto 0 Kg"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@android:color/holo_blue_dark">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_centerVertical="true"
			android:layout_gravity="center_vertical"
			android:id="@+id/llKoreksiTimbangBesar">

			<TextView
				android:id="@+id/tvKoreksi"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="5dp"
				android:visibility="visible"
				android:text="@string/titleKoreksi"
				android:textColor="@android:color/holo_orange_dark"
				android:layout_marginTop="3dp"/>

			<RelativeLayout
				android:id="@+id/rlKodeBarang"
				android:layout_width="wrap_content"
				android:layout_height="25dp"
				android:background="@drawable/rectstrokegray"
				android:layout_marginLeft="55dp"
				android:layout_marginBottom="7dp"
				android:layout_centerVertical="true">

				<Spinner
					android:layout_width="match_parent"
					android:id="@+id/spKodeBarangKoreksi"
					style="@style/DefaultSpinner"
					android:dropDownWidth="fill_parent"
					android:spinnerMode="dropdown"
					android:layout_centerVertical="true"
					android:textColor="@android:color/black"/>
			</RelativeLayout>

			<LinearLayout
				android:id="@+id/llPotonganAll"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="55dp"
				android:layout_marginBottom="7dp">

				<TextView
					android:id="@+id/tvPotongan"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="2dp"
					android:padding="3dp"
					android:visibility="visible"
					android:text="@string/HintPotongan"
					android:textColor="@android:color/black"/>

				<EditText
					android:id="@+id/etPotongKoreksi"
					style="@style/BeratTimbangan"
					android:layout_width="38dp"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:background="@drawable/rectstrokegraywhite"
					android:inputType="number"
					android:paddingBottom="3dp"
					android:paddingLeft="5dp"
					android:paddingRight="5dp"
					android:paddingTop="3dp"
					android:textColor="@android:color/holo_red_light"
					android:textColorHint="@android:color/holo_red_light"
					android:text="0"/>

				<RelativeLayout
					android:id="@+id/rlPotongan"
					android:layout_width="54dp"
					android:layout_height="match_parent"
					android:layout_marginLeft="8dp"
					android:layout_centerVertical="true"
					android:background="@drawable/rectstrokegray">

					<Spinner
						android:id="@+id/spPotongKoreksi"
						style="@style/DefaultSpinner"
						android:dropDownWidth="fill_parent"
						android:layout_centerVertical="true"
						android:spinnerMode="dropdown"
						android:textColor="@android:color/black"/>
				</RelativeLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="3dp"
		style="@style/ThemeTransparent"
		android:background="@android:color/transparent">
	</LinearLayout>
</LinearLayout>